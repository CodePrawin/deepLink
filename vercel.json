{
  "version": 2,
  "routes": [
    {
      "src": "/post/([a-zA-Z0-9_-]+)",
      "dest": "/redirect.html?type=post&id=$1"
    },
    {
      "src": "/user/([a-zA-Z0-9_-]+)",
      "dest": "/redirect.html?type=user&id=$1"
    },
    {
      "src": "/share/([a-zA-Z]+)/([a-zA-Z0-9_-]+)",
      "dest": "/redirect.html?type=$1&id=$2"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/.well-known/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}